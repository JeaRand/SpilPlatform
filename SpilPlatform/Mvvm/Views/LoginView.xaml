<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SpilPlatform.Mvvm.Views.LoginView">

    <StackLayout>
        <Entry Placeholder="Brugernavn" Text="{Binding Username}" />
        <Entry Placeholder="Adgangskode" Text="{Binding Password}" IsPassword="True" />
        <Button Text="Log ind" Command="{Binding AuthenticateCommand}" />
        <Label Text="Logget ind" IsVisible="{Binding IsAuthenticated}" />
    </StackLayout>
</ContentPage>
